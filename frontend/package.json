{
  "name": "youtube-comment-user-list-frontend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest --run --reporter=basic",
    "test:run": "vitest --run --reporter=basic",
    "test:unit": "vitest --run src/hooks src/utils src/components",
    "test:integration": "vitest --run src/__tests__",
    "test:fast": "vitest --run --reporter=dot",
    "test:bail": "vitest --run --bail=1",
    "test:coverage": "vitest --run --coverage",
    "test:turbo": "vitest --run --reporter=dot --no-isolate",
    "test:quiet": "vitest --run --reporter=basic --silent",
    "test:minimal": "vitest --run --reporter=basic --silent --disable-console-intercept",
    "test:summary": "vitest --run --reporter=json | grep -E '(testResults|numTotalTests|numPassedTests|numFailedTests)'",
    "test:verbose": "vitest --run --reporter=verbose",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "jsdom": "^22.1.0",
    "msw": "^2.3.0",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.3.3",
    "vite": "^5.4.3",
    "vitest": "^1.6.0",
    "whatwg-fetch": "^3.6.20"
  },
  "eslintConfig": {
    "root": true
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 100
  }
}
